<!-- ejs-mate boilerplate is used as a template  -->
<% layout('layouts/boilerplate') %>
    <!-- body element will be transfered to boilerplate where full -->
    <div id="cluster-map"></div>
    <div class="col-6 offset-3 my-4 text-center">
    <h1>All Campgrounds</h1>
    </div>
    
    <div class="">
        <a href="/campgrounds/new">Create New Campground</a>
    </div>
    <% for(let campground of campgrounds) { %>
        <div class="card mb-5" mb-3>
            <div class="row">
                <div class="col-md-4">
                    <% if(campground.images.length) {%> 
                    <img class="img-fluid" alt="" src="<%= campground.images[0].url %> ">
                    <% } else {%> 
                        <img class="img-fluid" src="https://source.unsplash.com/collection/4651015">
                    <% } %> 
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= campground.title %>
                        </h5>
                        <p class="card-text">
                            <%= campground.description %>
                        </p>
                        <p class="card-text">
                            <small class="text-muted">
                                <%= campground.location %>
                            </small>
                        </p>
                        <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">View <%= campground.title
                                %></a>
                    </div>
                </div>
            </div>
        </div>
        <% } %>
<script>
    const mapToken = '<%- process.env.MAPBOX_TOKEN %>';
    const campgrounds = {features: <%- JSON.stringify(campgrounds) %>};
</script>
<script src="/javascripts/clusterMap.js"></script>